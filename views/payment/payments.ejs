<%- include('../partials/head') %>
</head>
<body class="bg-gray-100">

<%- include('../partials/nav') %>

<main class="container mx-auto max-w-xl mt-12 bg-white shadow-lg rounded-lg p-8">
  <h2 class="text-3xl font-bold text-center text-green-600 mb-6">
    Payment
  </h2>

  <div class="border rounded-lg p-5 mb-6 bg-gray-50">
    <h3 class="text-lg font-semibold mb-3">Booking Summary</h3>

    <p><b>Property:</b> <%= booking.home.houseName %></p>
    <p><b>Check-in:</b> <%= booking.checkIn.toDateString() %></p>
    <p><b>Check-out:</b> <%= booking.checkOut.toDateString() %></p>
    <p><b>Total Guests:</b> <%= booking.guests.length %></p>

    <p class="text-xl font-bold mt-3">
      Total Amount: â‚¹ <%= booking.totalPrice || "--" %>
    </p>
  </div>

  <div class="space-y-3">
    <!-- Pay -->
    <form action="/payment/<%= booking._id %>/confirm" method="POST">
      <button
        type="submit"
        class="w-full bg-green-600 text-black py-3 rounded-md font-semibold hover:bg-green-700"
      >
        Pay Now
      </button>
    </form>

    <!-- Pay later -->
    <form action="/payment/<%= booking._id %>/paylater" method="POST">
      <button
        type="submit"
        class="w-full bg-red-500 text-white py-3 rounded-md font-semibold hover:bg-red-600"
      >
        Pay Later 
      </button>
    </form>


     <!-- Cancel -->
    <form action="/payment/<%= booking._id %>/cancel" method="POST">
      <button
        type="submit"
        class="w-full bg-red-500 text-white py-3 rounded-md font-semibold hover:bg-red-600"
      >
        Cancel Booking
      </button>
    </form>
  </div>

</main>

</body>
</html>
