<%- include('../partials/head') %>
  </head>
  <body>
    <%- include('../partials/nav') %>

    <main class="container mx-auto bg-white shadow-lg rounded-lg p-8 mt-10 max-w-3xl">
      <h2 class="text-3xl text-red-500 font-bold text-center mb-6">
        Details of <%= home.houseName %>
      </h2>

      <div class="flex flex-col items-center space-y-6">
        <!-- 🖼️ Smaller image -->
        <div class="rounded-lg overflow-hidden w-64 h-48">
          <img 
            src="<%= home.photoUrl %>" 
            alt="<%= home.houseName %>" 
            class="w-full h-full object-cover rounded-lg shadow-md"
          >
        </div>

        <!-- 🏠 Home details stacked vertically -->
        <div class="w-full space-y-4 text-center">
          <div>
            <h3 class="text-2xl font-semibold mb-1">Description</h3>
            <p class="text-gray-600"><%= home.description || "No description available." %></p>
          </div>

          <div>
            <h3 class="text-2xl font-semibold mb-1">Location</h3>
            <p class="text-gray-600"><%= home.location %></p>
          </div>

          <div>
            <h3 class="text-2xl font-semibold mb-1">Price</h3>
            <p class="text-green-600 text-xl font-bold">₹<%= home.price %> / night</p>
          </div>

          <div>
            <h3 class="text-2xl font-semibold mb-1">Rating</h3>
            <div class="flex justify-center items-center text-yellow-400 text-xl">
              ★ <span class="ml-2 text-gray-700 text-lg"><%= home.rating %> / 5</span>
            </div>
          </div>
        </div>
        <form action="/host/host-edit/<%= home.id %>" method="POST">
          <input type="text" name="houseName" value="<%= home.houseName %>" class="border p-2 rounded w-full mb-3">
          <input type="text" name="price" value="<%= home.price %>" class="border p-2 rounded w-full mb-3">
          <input type="text" name="location" value="<%= home.location %>" class="border p-2 rounded w-full mb-3">
          <input type="text" name="rating" value="<%= home.rating %>" class="border p-2 rounded w-full mb-3">
          <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600">Update</button>
        </form>
      </div>
    </main>
  </body>
</html>
